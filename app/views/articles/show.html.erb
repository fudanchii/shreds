
<% content_for :title do %>
  <%= title(article.title) %>
<% end %>

<% content_for :meta do %>
<meta name="pre-rendered" value="true" />
<% end %>

<% content_for :embedded_javascript do %>
(function () {
  var
    ShredsApp = require('shreds/stores/shreds_app'),
    Newsitem = require('shreds/stores/newsitem');
  Newsitem.preload(<%= raw pretty_json(EntryArticleSerializer.new(@entry)) %>);
  ShredsApp.preload({ toDisplay: 'newsitem' });
})();
<% end %>
