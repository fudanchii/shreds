<% if @feeds.empty? %>
  <div class="alert">
    <strong>No news</strong> at the moment
  </div>
<% else %>
  <% @feeds.each do |feed| %>
    <h2><%= link_to feed.title, feed %></h2>
    <% feed.newsitems.where(unread: 1) \
         .order("published desc").limit(3).each do |news| %>
      <div class="well well-large widget widget-transparent feed">
        <h3><%= link_to news.title, news.permalink, target: "_blank" %></h3>
        <div class="feed-content">
          <%= content(news).html_safe %>
        </div>
      </div>
    <% end %>
    <hr>
  <% end %>
<% end %>

