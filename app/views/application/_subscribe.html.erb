<%= simple_form_for(@new_feed, html: { :class => "form-inline" }) do |f| %>
  <div id="subscribeInput" style="display:none">
  <%= f.input :url, label: false, input_html: { placeholder: "Paste RSS link here" } %>
  <%= simple_fields_for @category do |c| %>
    <%= c.input :name, label: false, input_html: { placeholder: "Category (optional)" } %>
  <% end %>
  </div>
  <%= f.submit 'Subscribe', class: "btn btn-primary", id: "btnSubmitFeed" %> or <%= link_to 'Import OPML', '#', class: "btn pull-right", id: "btnImportOPML" %>
<% end %>
