<%= simple_form_for(@new_feed, :html => { :class => "form-inline" }) do |f| %>
  <%= f.input :url, label: false, :input_html => { placeholder: "Paste RSS link here" } %>
  <%= f.input :category, label: false, :input_html => { placeholder: "Category", value: f.object.category.name } %>
  <%= f.submit 'Subscribe', :class => "btn btn-info btn-small" %>
<% end %>
