<ul class="nav-buttons nav-pills nav-justified">
  <li data-toggle="tooltip" title="Refresh">
  <%= link_to 'javascript:void(0)' do %>
    <span class="glyphicon glyphicon-refresh"></span>
  <% end %>
  </li>
  <li data-toggle="tooltip" title="Mark All as Read">
    <%= link_to 'javascript:void(0)', :'data-toggle' => 'modal',
                                      :'data-target' => '.mdl-mark-as-read',
                                      :'data-on-mousedown' => 'renderModalMessage' do %>
      <span class="glyphicon glyphicon-ok"></span>
    <% end %>
  </li>
  <li data-toggle="tooltip" title="Settings (Coming soon!)">
    <%= link_to full_url('/backyard/subscriptions') do %>
      <span class="glyphicon glyphicon-cog"></span>
    <% end %>
  </li>
  <li data-toggle="tooltip" title="Logout (<%= @current_user.username %>)">
    <%= link_to full_url('/logout') do %>
      <span class="glyphicon glyphicon-log-out"></span>
    <% end %>
  </li>
</ul>

<%= content_for :modal_etc do %>
<div class="modal fade mdl-mark-as-read" tabindex="-1" role="dialog" aria-labelledby="mdlMarkAsReadLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="mdlMarkAsReadLabel" data-template="modal_mark_as_read"></h4>
      </div>
      <div class="modal-body">
        Really mark all feeds as read?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Not yet</button>
        <button type="button" class="btn btn-primary" data-on-click='markAllAsRead'>Yep!</button>
      </div>
    </div>
  </div>
</div>
<% end %>
