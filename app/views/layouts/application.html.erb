<!DOCTYPE html>
<html>
<head>
  <%= yield :head %>
  <title><%= yield :title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="row">
    <% if ENV['USE_HANDLEBARS'] %>
      <%= render 'navigation_hbs' %>
    <% else %>
      <%= render 'navigation' %>
    <% end %>
    <div class="span-fixed-sidebar">
      <%= render 'head_notification' %>
      <%= yield %>
    </div>
  </div>

  <%= javascript_include_tag "application" %>
  <%= yield :embedded_javascript %>
</body>
</html>
